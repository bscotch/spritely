{
  "name": "@bscotch/spritely",
  "version": "1.3.1",
  "description": "Spritely: Image correction and cleanup for 2D video game sprites",
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "./build/index.js",
  "files": [
    "build/cli/**/*",
    "build/lib/**/*",
    "build/index.*",
    "build/types/**/*"
  ],
  "bin": {
    "spritely": "./build/cli/spritely.js"
  },
  "scripts": {
    "test": "mocha --inspect --require source-map-support/register --bail ./build/test/index.js",
    "build": "rm -rf build && npx tsc",
    "preversion": "git checkout develop && npm run build && npm test",
    "version": "npx conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add -A",
    "postversion": "git push origin develop && git checkout main && git merge develop && git push origin main --follow-tags && npm publish && git checkout develop",
    "tsc-live": "npx tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:bscotch/spritely.git"
  },
  "keywords": [
    "sprite",
    "texture page",
    "sprite sheet",
    "image",
    "2D",
    "game engine",
    "art",
    "art asset",
    "pipeline",
    "gamemaker"
  ],
  "author": "Adam Coster (https://www.bscotch.net/about)",
  "license": "MIT",
  "homepage": "https://github.com/bscotch/spritely",
  "dependencies": {
    "@bscotch/utility": "^0.6.0",
    "commander": "^6.2.0",
    "fs-extra": "^9.0.1",
    "image-js": "^0.30.3",
    "image-size": "^0.9.3",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/fs-extra": "^9.0.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "chai": "^4.2.0",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.13.0",
    "mocha": "^8.2.1",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.1-rc"
  }
}
